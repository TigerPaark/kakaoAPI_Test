<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=7e2b4db29e8ed5dc8f48721f81265be0"></script>
<script type="text/javascript">
	
	function initialize()
	{
		container = document.getElementById("map");
		options = 
		{
			center: new daum.maps.LatLng(37.556528, 126.919496)	
		  , level: 3	
		};
		map = new kakao.maps.Map(container, options);
	}
	// 중심좌표 이동 버튼 클릭 시 호출
	function setCenter()
	{
		// 테스트
		// alert("버튼 클릭~!");
		
		// 중심을 이용할 위도 경도 위치 생성(라인프렌즈 홍대)
		var moveLatLng = new kakao.maps.LatLng(37.556479, 126.923820);
		
		// 지도 중심 이동
		map.setCenter(moveLatLng);
		
		//--==>>
		/*
		map.setCenter(new new kakao.maps.LatLng(37.556479, 126.923820));
		*/
		
	}
	function panTo1()
	{
		// 중심을 이동할 위도 경도 위치 생성(메가박스 홍대)
		var moveLatLng = new kakao.maps.LatLng(37.555986, 126.922033);
		
		// 지도 중심을 부드럽게 이동
		//-- 지도의 중심을 이동하는 과정에서 이동할 지점이 현재 지도에서 표현되는 범위 밖에 있다면
		//   즉, 이동 거리가 지도 화면보다 크다면 부드러운 효과 없이 이동하게 된다.
		map.panTo(moveLatLng);
	}
	// 중심좌표 부드럽게 이동2 버튼 클릭 시 호출 
	function panTo2()
	{
		// 중심을 이동할 위도 경도 위치 생성(메가박스 홍대)
		var moveLatLng = new kakao.maps.LatLng(37.557955, 126.925777);
		
		// 지도 중심을 부드럽게 이동
		//-- 지도의 중심을 이동하는 과정에서 이동할 지점이 현재 지도에서 표현되는 범위 밖에 있다면
		//   즉, 이동 거리가 지도 화면보다 크다면 부드러운 효과 없이 이동하게 된다.
		map.panTo(moveLatLng);
	}
	
	// 중심좌표 부드럽게 이동3 버튼 클릭 시 호출
	function panTo3()
	{
		// 중심을 이동할 위도 경도 위치 생성(메가박스 홍대)
		var moveLatLng = new kakao.maps.LatLng(37.557955, 126.925777);
		
		// 지도 중심을 부드럽게 이동
		//-- 지도의 중심을 이동하는 과정에서 이동할 지점이 현재 지도에서 표현되는 범위 밖에 있다면
		//   즉, 이동 거리가 지도 화면보다 크다면 부드러운 효과 없이 이동하게 된다.
		map.panTo(moveLatLng);
	}

</script>
</head>
<body onload="initialize()">

